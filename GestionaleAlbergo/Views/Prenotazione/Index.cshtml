@model IEnumerable<GestionaleAlbergo.Models.Prenotazione>

@{
    ViewBag.Title = "Index";
    if (TempData["msgErrore"] != null)
    {
        ViewBag.msgErrore = TempData["msgErrore"];
    }
    if (TempData["msgSuccess"] != null)
    {
        ViewBag.msgSuccess = TempData["msgSuccess"];
    }
}

<h1>Elenco prenotazioni</h1>

@if (ViewBag.msgErrore != null)
{
    <div class="alert alert-danger fw-bold text-danger my-3" role="alert">
        @ViewBag.msgErrore
    </div>
}
@if (ViewBag.msgSuccess != null)
{
    <div class="alert alert-success fw-bold text-success my-3" role="alert">
        @ViewBag.msgSuccess
    </div>
}

@Html.ActionLink("Registra una nuova prenotazione", "Create", null, new { @class = "btn btn-success" })


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DataPrenotazione)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumeroProgressivoAnno)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Anno)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PeriodoDal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PeriodoAl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CaparraConfirmatoria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TariffaApplicata)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipoSoggiorno)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cliente.NomeCompleto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Camera.Numero)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImportoDovuto)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DataPrenotazione)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroProgressivoAnno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Anno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PeriodoDal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PeriodoAl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CaparraConfirmatoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TariffaApplicata)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoSoggiorno)
            </td>
            <td>

                @Html.DisplayFor(modelItem => item.Cliente.NomeCompleto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Camera.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImportoDovuto)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-outline-warning  m-0" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-danger  m-0" })
                @Html.ActionLink("CheckOut", "CheckOut", new { id = item.Id }, new { @class = "btn btn-success  m-0" })
                @Html.ActionLink("Servizi aggiuntivi", "Index", "ServizioAggiuntivo",  new { id = item.Id }, new { @class = "btn btn-success  m-0" })
            </td>
        </tr>
    }

</table>
